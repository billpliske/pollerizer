<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:id="@+id/relativeLayout">

    <TextView
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="40sp"
        android:textIsSelectable="false"
        android:singleLine="false"
        android:layout_alignParentEnd="true"
        android:height="130sp"
        android:textAlignment="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vote No"
        android:id="@+id/buttonNo"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/buttonYes"
        android:layout_toEndOf="@+id/buttonYes"
        android:layout_marginLeft="42dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vote Yes"
        android:id="@+id/buttonYes"
        android:layout_toEndOf="@+id/textView"
        android:textSize="20sp"
        android:layout_alignTop="@+id/buttonNo"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Yes votes"
        android:id="@+id/votesYes"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/votesNo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="No votes"
        android:id="@+id/votesNo"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/buttonNo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Yes"
        android:id="@+id/lblYes"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/buttonYes" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="No"
        android:id="@+id/lblNo"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/lblYes" />

</RelativeLayout>
